<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_follower_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_follower_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_follower_photo"
        app:layout_constraintTop_toTopOf="@+id/img_follower_photo"
        tools:text="@string/github_username" />

    <TextView
        android:id="@+id/tv_follower_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="@string/github_username"
        android:textColor="@color/metallic_seaweed"
        app:layout_constraintEnd_toEndOf="@+id/tv_follower_username"
        app:layout_constraintStart_toStartOf="@+id/tv_follower_username"
        app:layout_constraintTop_toBottomOf="@+id/tv_follower_username" />

</androidx.constraintlayout.widget.ConstraintLayout>

